{% extends 'Layout/base.html.twig' %}

{% block main %}
    Home
    <ul>
    {% for user in users %}
        <li>{{ user.email }} {{ user.firstname }} {{ user.lastname }} <a href="{{ path('app_home_update', {'id': user.id}) }}">Edit</a> <a href="{{ path('app_home_delete', {'id': user.id}) }}">Delete</a></li>
    {% endfor %}
    </ul>

    <div id="articles">
        {% for article in articles %}
            <div class="article">
                <h2>{{ article.title }}</h2>
                <p>{{ article.content }}</p>
                <p>{{ article.author.firstname }}</p>

            </div>
        {% endfor %}
    </div>
{% endblock main %}
